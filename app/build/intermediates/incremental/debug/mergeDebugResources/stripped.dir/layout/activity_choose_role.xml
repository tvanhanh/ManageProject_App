<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Project"
            android:textColor="#FF6600"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- Account Info -->
        <TextView
            android:id="@+id/tvAccountInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản haha3@gmail.com của bạn chưa gia nhập tổ chức/doanh nghiệp nào."
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

        <!-- Instructions -->
        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hãy quét mã QR Code, nhập ID của doanh nghiệp để gia nhập hoặc đăng ký một tổ chức/doanh nghiệp mới."
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp" />

        <!-- Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Đăng Ký Tổ Chức Mới -->
            <LinearLayout
                android:id="@+id/lnLeader"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="#F0F0F0"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/tochuc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng Ký Tổ Chức Mới"
                    android:textColor="#FF6600"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dành Cho Lãnh Đạo"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Nhập ID Tổ Chức -->
            <LinearLayout
                android:id="@+id/lnIdOrg"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="#F0F0F0"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/id" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Dự án tham gia"
                    android:textColor="#FF6600"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhân Viên"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Quét QR Code Tổ Chức -->
            <LinearLayout
                android:id="@+id/lnQRcode"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="#F0F0F0"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/qrcode" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quét QR Code Tổ Chức"
                    android:textColor="#FF6600"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhân Viên"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Separator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- Hoặc --"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingBottom="24dp" />

            <LinearLayout
                android:id="@+id/lnPersonally"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="#F0F0F0"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/canhan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký Cá Nhân"
                    android:textColor="#FF6600"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Cá Nhân"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
