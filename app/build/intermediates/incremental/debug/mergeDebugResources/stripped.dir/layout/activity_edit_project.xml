<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Project.EditProjectActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnback"
            android:layout_width="53dp"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/logo"
            android:layout_height="42dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="Sửa Dự án "
            android:textSize="18sp"
            android:layout_width="wrap_content"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttondatejob"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/clock"
                android:text="." />
            <Button
                android:id="@+id/buttonHome"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/icon_home"
                android:text="." />
        </LinearLayout>
    </LinearLayout>




    <EditText
        android:id="@+id/editAddNameProject"
        android:layout_width="369dp"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:drawablePadding="@dimen/size10dp"
        android:hint="Tên dự án"
        android:padding="@dimen/size10dp"
        android:singleLine="true"
        android:textColorHint="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/textInputEditTextDescription"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="21dp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="140dp"
        android:text="Nội dung dự án"
        android:textColor="@color/print"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditTextDescription"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:background="@color/yelo"
        android:gravity="top"
        android:hint="Sửa nội dung "
        app:layout_constraintBottom_toTopOf="@+id/buttonThenext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.249">

    </com.google.android.material.textfield.TextInputEditText>

    <Button
        android:id="@+id/buttonaddTime"
        android:layout_width="153dp"
        android:layout_height="38dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="296dp"
        android:backgroundTint="@color/xanhduong"
        android:drawablePadding="8dp"
        android:text=" Sửa Thời Hạn"
        android:textColor="@color/xanhlaChụoi"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonaddPerson"
        android:layout_width="152dp"
        android:layout_height="58dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="228dp"
        android:backgroundTint="@color/xanhduong"
        android:drawableLeft="@drawable/peoples"
        android:drawablePadding="8dp"
        android:text=" Cập nhật nhân sự"
        android:textColor="@color/xanhlaChụoi"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonThenext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:text="CẬP NHẬT DỰ ÁN"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="142dp"
        android:layout_height="152dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="124dp"
        android:text="Hạn:"
        app:layout_constraintBottom_toTopOf="@+id/buttonThenext"

        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>