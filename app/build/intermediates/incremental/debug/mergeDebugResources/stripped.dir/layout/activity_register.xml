<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizotal_magin"
    android:paddingRight="@dimen/activity_horizotal_magin"
    android:paddingTop="@dimen/activity_vertical_magin"
    android:paddingBottom="@dimen/activity_vertical_magin"
    android:background="@drawable/background"
    tools:context=".View.Users.RegisterActivity">


    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/apptext"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/textRegister"
            android:textColor="@color/red"
            android:textSize="25dp" />


        <LinearLayout
            android:id="@+id/lnFrameRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="200dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size10dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/gmail1"
                android:drawablePadding="@dimen/size10dp"
                android:hint="@string/hintEmail"
                android:padding="@dimen/size10dp"
                android:singleLine="true"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size10dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="@dimen/size10dp"
                android:hint="@string/hintPassword"
                android:padding="@dimen/size10dp"
                android:singleLine="true"
                android:textColorHint="@color/black" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_gravity="right"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="30dp"
                android:text="Show password"
                android:textColor="@color/print" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/xanhla"
                android:textColor="@color/black"
                android:layout_margin="@dimen/size20dp"
                android:layout_gravity="center"
                android:text="@string/btnRegister" />

            <TextView
                android:id="@+id/textLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="Login by Account"
                android:textColor="@color/red" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
