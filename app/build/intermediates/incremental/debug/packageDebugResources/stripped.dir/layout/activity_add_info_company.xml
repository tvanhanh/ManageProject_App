<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Users.EditAccountActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/comeback"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="Thêm thông tin công ty"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttondatejob"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/clock"
                android:text="." />

            <Button
                android:id="@+id/buttonHome"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/icon_home"
                android:text="." />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:orientation="horizontal"
                android:id="@+id/lnImageViewAdd"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView"
                    android:layout_width="113dp"
                    android:layout_height="93dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/useravatar" />

            </LinearLayout>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Ảnh logo công ty"
                 android:layout_marginLeft="110dp"
                 android:fontFamily="@font/poppins_black"
                 android:textColor="@color/orange"
                 />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:text="Tên Công ty"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="tên" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="90dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:text="Địa chi"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editTextAddress"
                    android:layout_width="307dp"
                    android:layout_height="57dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:inputType=""
                    android:hint="địa chỉ" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:text="Liên hệ"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="307dp"
                    android:layout_height="57dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:hint="số điện thoại"
                    android:inputType="phone" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:text="Lĩnh vực "
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editTextField"
                    android:layout_width="307dp"
                    android:layout_height="57dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:hint="lĩnh vực"
                    android:inputType="textPostalAddress" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="150dp"
        android:layout_height="61dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/xanhduong"
        android:text="LƯU"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
