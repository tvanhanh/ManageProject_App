<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Invite.DetailInviteActivity">
    <TextView
        android:id="@+id/inviteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:text="Thư Mời"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        android:textAlignment="center" />
    <!-- Company logo -->
    <ImageView
        android:id="@+id/companyLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="56dp"
        app:srcCompat="@color/gray"
        android:scaleType="centerCrop"
        android:contentDescription="" />
    <!-- Company name -->
    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/companyLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textAlignment="center" />

    <!-- Company field -->
    <TextView
        android:id="@+id/companyField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/companyName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textAlignment="center" />

    <!-- Company address -->
    <TextView
        android:id="@+id/companyAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/companyField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textAlignment="center" />

    <!-- Company phone number -->
    <TextView
        android:id="@+id/companyPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/companyAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textAlignment="center" />

    <!-- Avatar of sender -->
    <ImageView
        android:id="@+id/avatarSend"
        android:layout_width="101dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:contentDescription=""
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/companyPhoneNumber"
        app:srcCompat="@drawable/ic_launcher_foreground" />
    <!-- Name of sender -->

    <!-- Invitation context -->
    <TextView
        android:id="@+id/userNameSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="296dp"
        android:text="Hạnh Trần"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatarSend" />

    <TextView
        android:id="@+id/context"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userNameSend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:lineSpacingExtra="4dp" />

    <!-- Join button -->
    <Button
        android:id="@+id/joinButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/context"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Tham gia"
        android:textAllCaps="false"
        android:backgroundTint="#3F51B5"
        android:textColor="@android:color/white" />

    <!-- Decline button -->
    <Button
        android:id="@+id/declineButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/joinButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Từ chối"
        android:textAllCaps="false"
        android:backgroundTint="#616161"
        android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/declineButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/buttonXanhDam"
        android:textAlignment="center" />

</androidx.constraintlayout.widget.ConstraintLayout>
