<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingLeft="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="Suspicious0dp">

                <!-- Nút "Quay lại" -->
                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="47dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/baseline_arrow_back_24" />

                <!-- Logo -->
                <TextView
                    android:id="@+id/logo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Chi tiết dự án"
                    android:textSize="18sp" />

                <!-- Các nút chức năng -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <!-- Nút Tìm kiếm -->
                    <Button
                        android:id="@+id/buttonSeacrh"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/search" />

                    <!-- Nút Ngày -->
                    <Button
                        android:id="@+id/buttonDate"
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/clock" />

                    <!-- Nút Cảnh báo -->
                    <Button
                        android:id="@+id/buttonWarning"
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/date" />
                </LinearLayout>
            </LinearLayout>
            <!-- Header -->

            <!-- Status and Deadline -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvStatusDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="• Đang Thực Hiện"
                    android:textColor="#0000FF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvDeadlineDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời hạn: 17:00 T7, 11/5/24 Trễ!"
                    android:textColor="#FF0000"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/NameProrjectDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"

                    android:text="Tên dự án"
                    android:textColor="@color/orange"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/TimeCreationProjectDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Ngày tạo"
                    android:textColor="@color/xanhduong"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Task Title -->

            <!-- Task Creator Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/useravatar" />
                <!--                android:src="@drawable/ic_user" -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/tvUserNameDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="user"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvEmailDetail"
                        android:layout_width="197dp"
                        android:layout_height="match_parent"
                        android:text="user@gmail.com"
                        android:textColor="#666666"
                        android:textSize="13sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="8dp"
                            android:text="Lần xem:"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_black"/>
                    <TextView
                        android:id="@+id/tvViews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="8dp"
                        android:text="39"
                        android:fontFamily="@font/poppins_black"
                        android:textColor="@color/buttonXanhDam"
                        android:textSize="14sp" />
                    </LinearLayout>
                    </LinearLayout>



                <Button
                    android:id="@+id/btnImportant"
                    android:layout_width="79dp"
                    android:layout_height="36dp"
                    android:padding="4dp"
                    android:text="Quan Trọng"
                    android:textColor="#666666"
                    android:textSize="10sp" />
                <!--                android:background="@drawable/bg_label_important"-->

            </LinearLayout>

            <!-- Add Tag Button -->
            <Button
                android:id="@+id/addTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#EEEEEE"
                android:padding="8dp"
                android:text="+ Thêm Thẻ"
                android:textColor="#000000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung dự án:"
                android:textColor="@color/black"
                android:background="@color/butomnavication"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_black"
                ></TextView>
            <TextView
                android:id="@+id/tvprojectContext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="noi dung"
                android:textColor="@color/black"
                android:background="@color/viewpager"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                ></TextView>

            <!-- Attached Files -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="📎 File đính kèm"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvStatusFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:text="Chưa có file đính kèm cho công việc này."
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Task Participants -->

            <!-- Task Items -->

            <!-- Discussion Section -->
            <LinearLayout
                android:id="@+id/lnRCVTask"
                android:layout_width="392dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_task"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"

                    android:scrollbars="none">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="206dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/peoples"
                        android:paddingTop="10dp"
                        android:paddingBottom="8dp"
                        android:text=" Người Thực Hiện"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <Button
                        android:id="@+id/btn_add_staff_work"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:text="+ Thêm nhân sự"
                        android:fontFamily="@font/spartan_bold"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/xanhla"
                        >
                    </Button>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_staff_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:textColor="@color/black">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/peoples"
                    android:padding="8dp"
                    android:text="Người theo dõi"
                    android:textSize="18dp"></TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_userFollow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="0dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="💬 Thảo Luận"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <!-- Button to add a new discussion -->

                    <!-- Existing discussions -->
                    <Button
                        android:id="@+id/btnAddDiscussion"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="178dp"
                        android:layout_marginBottom="30dp"
                        android:background="@color/xanhduong"
                        android:backgroundTint="#EEEEEE"
                        android:text="+ Thêm "
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/discussionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <!-- Example of a single discussion item -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="#F5F5F5"
                        android:orientation="horizontal"
                        android:padding="8dp">


                        <!--                android:src="@drawable/ic_user" -->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Trần Văn Hạnh"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nội dung thảo luận..."
                                android:textColor="#666666"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnReply"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:padding="8dp"
                            android:text="Phản"
                            android:textColor="#0000FF" />

                        <Button
                            android:id="@+id/btnDelete"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:padding="8dp"
                            android:text="Xóa"
                            android:textColor="#FF0000" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/circleImageViewComment"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_background"
                            android:src="@drawable/useravatar" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- More Button -->
    <Button
        android:id="@+id/btnViewMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="26dp"
        android:backgroundTint="@color/xanhduong"
        android:padding="8dp"
        android:text="Xem thêm"
        android:textColor="#FFFFFF" />
</FrameLayout>
