<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pinkTask"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/statusTask"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp" />

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NameTaskNewUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/spartan_bold"
                    android:text="Tên task" />

                <TextView
                    android:id="@+id/contentTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Nội dung" />

                <TextView
                    android:id="@+id/tvDealine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Hạn:" />
            </LinearLayout>

            <TextView
                android:id="@+id/options"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:drawableRight="@drawable/threedots" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/NamePersonOfTaskUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Văn Hạnh" />

            <TextView
                android:id="@+id/timeUpdateTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="146dp"
                android:text="vài giây trước" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#CCCCCC" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
