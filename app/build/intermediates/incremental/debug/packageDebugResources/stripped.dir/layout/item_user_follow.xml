<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:padding="20dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/listDepartment"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/gray"
        android:gravity="center_horizontal"> <!-- Center horizontally -->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_use_follow"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/useravatar"
            android:layout_gravity="center" /> <!-- Center inside parent -->

        <TextView
            android:id="@+id/userNameFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Văn Hạnh"
            android:textSize="20dp"
            android:layout_marginTop="10dp" /> <!-- Optional margin to add space between image and text -->

    </LinearLayout>

</androidx.cardview.widget.CardView>
